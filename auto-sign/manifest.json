{
    "manifest_version": 2,
    "name": "Auo Sign",
    "version": "1.0",
    "description": "自动签到",
    "background": {
        "page": "html/background.html"
    },
    "browser_action": {
        "default_popup": "html/popup.html",
        "default_icon":  {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        }
    },
    "icons": {
        "19": "images/icon19.png",
        "38": "images/icon38.png"
    },
    "web_accessible_resources": [
        "js/popup.js",
        "css/bootstrap.min.css",
        "js/background.js"
    ],
    "permissions": [
        "downloads",
        "alarms",
        "contextMenus",
        "cookies",
        "notifications",
        "storage",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "http://*/",
        "https://*/"
    ],
    "options_page": "html/options.html"
}